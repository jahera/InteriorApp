
<div class="container">
  <div class="col-md-7">
    <h2>Sign In</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="controls">
        <%= f.email_field :email, autofocus: true ,:placeholder=>"Email",:class=>"validate[required] form-control"%>
        <p class="help-block"></p>
      </div>
      <div class="controls">
        <%= f.password_field :password, autocomplete: "off" ,:placeholder=>"Password", :class=>"validate[required] form-control" ,maxlength: "14"%>
        <p class="help-block"></p>
      </div>      
      <div style="float:left; margin:10px 0">
        <%= f.submit "Log In" , id: "btn-contact" , class: "btn btn-primary"%>  
        </div>
      <%end%>
    <div class=" clearfix"></div>
    <div style="float:left; margin:10px 0">
        <%= render "devise/shared/links" %>
        </div>
    </div>
  </div>

  <div class=" clearfix"></div>
  <div style="height: 30px">&nbsp;</div>
