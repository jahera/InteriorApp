<div class="container">
  <div class="col-md-7">
    <h2>Upload New Image</h2>
    <%= form_for :image, url: filecreate_home_index_path,html: {multipart: true , method: 'post'} do |f| %>
      <div class="controls">
        <label for="exampleInputEmail1">Select Category</label>
        <%= f.select :category, options_for_select(Image::CATEGORIES), {}, {:class => "validate[required] form-control"}%>
        <p class="help-block"></p>
      </div>
      <div class="controls">
        <label for="exampleInputEmail1">Title</label>
        <%= f.text_field :title, autofocus: true ,class: "validate[required] form-control", id:"exampleInputname" , placeholder:"Tile"%>
          <p class="help-block"></p>
        </div> 
        <div class="controls">
          <label for="exampleInputPassword1">Description</label>
          <%= f.text_area :desc, autofocus: true ,class: "validate[required] form-control", rows: "3", id:"exampleInputname" , placeholder:"Description"%>
            <p class="help-block"></p>
          </div> 

          <div class="controls">
            <label for="exampleInputFile">Video Input</label>
            <%= f.file_field :file , class: 'validate[required]'%>
              <p class="help-block"></p>
            </div> 


            <div style="float:left; margin:10px 0">
              <%= f.submit "Submit" , id: "btn-contact" , class: "btn btn-primary"%>  
              </div>
            <%end%>
            
          </div>
        </div>

        <div class=" clearfix"></div>
        <div style="height: 30px">&nbsp;</div>